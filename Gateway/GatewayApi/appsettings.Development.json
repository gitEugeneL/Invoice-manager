{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" } 
        ]
      },
      "company-route": {
        "ClusterId": "company-cluster",
        "Match": {
          "Path": "company/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "invoice-route": {
        "ClusterId": "invoice-cluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
    },
    
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://identity.api:8080/api/v1/auth/"
          }   
        }
      },
      "company-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://company.api:8080/api/v1/company/"
          }
        }
      },
      "invoice-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://invoice.api:8080/api/v1/"
          }
        }
      }
    }
  }
}
